{
  "name": "cdk8s",
  "version": "1.0.0",
  "main": "main.js",
  "types": "main.ts",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "import": "cdk8s import",
    "synth": "npm run helm:add && cdk8s synth",
    "compile": "tsc --build",
    "watch": "tsc --build -w",
    "helm:add": "helm repo add traefik https://helm.traefik.io/traefik && helm repo add jetstack https://charts.jetstack.io",
    "build": "npm run compile && npm run synth",
    "upgrade": "npm i cdk8s@latest cdk8s-cli@latest",
    "upgrade:next": "npm i cdk8s@next cdk8s-cli@next"
  },
  "dependencies": {
    "cdk8s": "^2.7.3",
    "cdk8s-plus-25": "^2.4.24",
    "constructs": "^10.1.253"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.36",
    "cdk8s-cli": "^2.1.135",
    "jest": "^26.6.3",
    "prettier": "2.8.4",
    "ts-jest": "^26.5.6",
    "typescript": "^4.9.5"
  }
}
